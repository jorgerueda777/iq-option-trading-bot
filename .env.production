# Variables de entorno para producción en Render
NODE_ENV=production
TZ=America/New_York
PORT=3000

# IQ Option Credentials (configurar en Render dashboard)
# IQ_EMAIL=tu_email@ejemplo.com
# IQ_PASSWORD=tu_password_seguro

# Configuración de Trading
TRADING_AMOUNT=1
MIN_CONFIDENCE=50
MAX_SIMULTANEOUS_OPERATIONS=5

# Configuración de Assets
ENABLED_ASSETS=EURUSD-OTC,GBPUSD-OTC,EURJPY-OTC,EURGBP-OTC,USDCHF-OTC,AUDCAD-OTC

# Configuración de Timeframes
PRIMARY_TIMEFRAME=60
ANALYSIS_TIMEFRAMES=300,900,3600

# Configuración de Base de Datos
DB_PATH=/app/data/historical.db

# Configuración de Logs
LOG_LEVEL=info
LOG_TO_FILE=true

# Configuración de Servidor Web
ENABLE_DASHBOARD=true
DASHBOARD_PORT=3000
